    </ul>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myButton").click(function () {
                // Вызов AJAX-запроса для отправки данных на сервер
                $.ajax({
                    url: "/Labs/HandleRunLab3", // Замените на свой URL и действие контроллера
                    type: "POST",
                    data: {n: parseInt($("#input1").val()),
                        x1: parseInt($("#input2").val()),
                        y1: parseInt($("#input3").val()),
                        x2: parseInt($("#input4").val()),
                        y2: parseInt($("#input5").val())},
                    success: function (result) {
                        $("#res1").html(result.res1);
                    },
                });
            });
        });
